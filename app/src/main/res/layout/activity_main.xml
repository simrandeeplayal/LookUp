<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#8d5cceff"
    android:layout_height="match_parent"
    tools:context="com.example.simrandeepsingh.lookup.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityText"
        android:textSize="25sp"
        android:textColor="#fff"
        android:paddingTop="5sp"
        android:textStyle="bold"
        android:text="New Delhi,india"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/thumnail"
        android:layout_below="@+id/cityText"
        android:layout_marginTop="10dp"

        android:layout_width="100dp"
        android:layout_height="100dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temptext"
        android:layout_below="@+id/cityText"
        android:textColor="#fff"
        android:paddingTop="5sp"
        android:layout_marginTop="25dp"
        android:textSize="42sp"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:text="12 Deg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/windtext"
        android:paddingLeft="10dp"
        android:layout_below="@+id/thumnail"
        android:textColor="#fff"
        android:layout_marginTop="35dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="false"
        android:text="Wind" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cloudtext"
        android:layout_below="@+id/windtext"
        android:textColor="#fff"
        android:paddingTop="5sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="false"
        android:textStyle="normal"
        android:text="Cloud" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pressuretext"
        android:layout_below="@+id/cloudtext"
        android:textColor="#fff"
        android:paddingTop="5sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="false"
        android:textStyle="normal"
        android:text="Pressure" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humidtext"
        android:layout_below="@+id/pressuretext"
        android:textColor="#fff"
        android:paddingTop="5sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="false"
        android:textStyle="normal"
        android:text="Humid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/risetext"
        android:layout_below="@+id/humidtext"
        android:textColor="#fff"
        android:paddingLeft="10dp"
        android:paddingTop="5sp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="false"
        android:textStyle="normal"
        android:text="Sunrise" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settext"
        android:layout_below="@+id/risetext"
        android:textColor="#fff"
        android:paddingTop="5sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="false"
        android:textStyle="normal"
        android:text="Sunset" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updatetext"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:layout_below="@id/settext"
        android:textSize="14sp"
        android:text="Last Updated"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
